/* pages/zixun/zixunDetail/zixunDetail.wxss */
.container{
  padding:30rpx 15rpx 30rpx 15rpx;
}

.load-img {
  display: block;
  width: 96rpx;
  height: 112rpx;
  margin: 200rpx auto;
}

.title{
  width:720rpx;
  border-bottom: 1rpx solid rgb(218, 218, 218);
  padding-bottom: 20rpx;
}

.title-text{
  width:100%;
  font-size:30rpx;
  line-height: 50rpx;
  letter-spacing: 3rpx;
}

.title-info{
  width:100%;
  font-size:22rpx;
  color:rgb(175, 175, 175);
  margin-top:15rpx;
}

.content img{
  max-width: 100%;
}

.content{
  width:720rpx;
  font-size:25rpx;
  line-height: 40rpx;
  padding-top:20rpx;
  padding-bottom:100rpx;
}

.comment{
  position: fixed;
  width:720rpx;
  margin:0rpx auto;
  bottom: 0rpx;
  height:80rpx;
  border-top:1rpx solid rgb(218, 218, 218);
  background: white;
  opacity: 0.9;
  overflow: hidden;
}

.comment-input,.comment-button,.comment-icon{
  display: float;
  float:left;
}

.comment-input{
  background: rgb(224, 224, 224);
  height:60rpx;
  border-radius: 5rpx;
  width:485rpx;
  margin-top:10rpx;
  font-size:25rpx;
  padding-left:65rpx;
  margin-left:-50rpx;
}

.comment-icon{
  position: relative;
  width:44rpx;
  height:44rpx;
  z-index: 10000;
  top:18rpx;
  left:10rpx;
}

.comment-button{
  width:120rpx;
  height:60rpx;
  color:white;
  margin-top:10rpx;
  font-size:25rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius:5rpx;
  margin-left:45rpx;
  background: rgb(253, 23, 23);
}

.comments{
  margin-bottom: 70rpx;
}

.comments-top{
  height:70rpx;
  line-height: 70rpx;
  font-size:25rpx;
}

.comments-top-icon,.comments-top-text{
  display: float;
  float:left;
}

.comments-top-icon{
  width:40rpx;
  height:40rpx;
  margin-top:15rpx;
}