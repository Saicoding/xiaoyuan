/**index.wxss**/
@import "/wxSearch/wxSearch.wxss";

/* banner */
.swiper{
  width:750rpx;
  height:375rpx;
}

.slide-image{
  width:750rpx;
  height:375rpx;
}

/* 中间的粗灰条 */
.bolder-line{
  width:100%;
  height:50rpx;
  background:#f2f2f2;
}

/* 课程信息 */
.courses{
  width:720rpx;
  margin-left:12rpx;
}

.course{
  display: float;
  float:left;
  width:226rpx;
  height:60rpx;
  border-radius: 20rpx;
  border:1rpx solid rgb(212, 212, 212);
  margin-top:20rpx;
  margin-left:10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.course-icon{
  display: inline-block;
  vertical-align: middle;
  width:34rpx;
  height:34rpx;
  margin-left:20rpx;
}

.course-name{
  display: inline-block;
  vertical-align: middle;
  font-size:26rpx;
  margin-left:20rpx;
}

/* 正在学习课程和搜索 */
.learning_search{
  clear:both;
  width:100%;
  height:120rpx;
  background: #f0f3fa;
}

.learning,.wxSearch-input,.learning-icon,.learning-text{
  display: float;
  float:left;
}

.learning,.wxSearch-input{
  height:90rpx;
  border-radius: 90rpx;
  margin-top:15rpx;
}

.learning{
  background: #ffffff;
  width:290rpx;
  margin-left:20rpx;
}

.learning-icon{
  height:60rpx;
  width:60rpx;
  margin-top:15rpx;
  margin-left:15rpx;
}

.learning-text{
  height:90rpx;
  font-size:30rpx;
  line-height: 90rpx;
  margin-left:15rpx;
}

.wxSearch-input{
  padding-left:30rpx;
  width:340rpx;
  font-size:28rpx;
  height:70rpx;
  margin-left:40rpx;
}

.search-icon{
  position:relative;
  width:50rpx;
  height:50rpx;
  top:-68rpx;
  left:345rpx;
}

.select1{
  background: rgb(212, 212, 212);
}