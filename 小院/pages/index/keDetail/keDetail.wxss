/* pages/index/keDetail/keDetail.wxss */
.video,.video-img{
  width:750rpx;
  height:422rpx;
}

/* wifi提示字体 */

.wifi{
  width:750rpx;
  height:422rpx;
  background: black;
  color:white;
  text-align: center;
}

.wifi-text1,.wifi-text2{
  width:100%;
}

.wifi-text1{
  font-size:30rpx;
  letter-spacing: 2rpx;
  margin-top:90rpx;
}
.wifi-text2{
  font-size:25rpx;
  margin-top:30rpx;
  letter-spacing: 1rpx;
}

.wifi-button{
  width:180rpx;
  height:55rpx;
  font-size:25rpx;
  line-height: 55rpx;
  border:1rpx solid #b74e2a;
  border-radius: 5rpx;
  margin:80rpx auto;
  color:#b74e2a;

}

.video-icon{
  width:100rpx;
  height:100rpx;
  margin:153rpx auto;
}

.catalogue{
  padding-left:15rpx;
  padding-right:15rpx;
  height:80rpx;
  line-height: 80rpx;
  font-size:30rpx;
}

.catalogue-item{
  display: float;
  float:left;
  width:180rpx;
  height:80rpx;
  text-align: center;
  letter-spacing: 6rpx;
}

.load-img {
  display: block;
  width: 96rpx;
  height: 112rpx;
  margin: 150rpx auto;
}

/* 正文 */
.content{
  margin-top:6rpx;
}
.learning-block{
  border-top:15rpx solid #f0f3fa;
  border-bottom:8rpx solid #f0f3fa;
  width:100%;
  height:100rpx;
}

.learning-block-in{
  display: float;
  float:left;
}

.learning-block-in{
  height:60rpx;
  width:auto;
  margin-top:20rpx;
  background: #0096fa;
  border-radius: 0rpx 60rpx 60rpx 0rpx;
  line-height: 60rpx;
  font-size:22rpx;
  color:white;
  padding-left:10rpx;
  padding-right:25rpx;
}
.jienum-block{
  width:725;
  height:60rpx;
  line-height: 60rpx;
  font-size:25rpx;
  padding-left:25rpx;
  color:rgb(146, 146, 146);
  letter-spacing: 1rpx;
}

/* 列表信息 */
.list{
  background: #f0f3fa;
}
.list-block{
  clear: both;
  width:93%;
  height:80rpx;
  margin:0 auto;
  border-bottom:1rpx solid rgb(224, 224, 224);
}

.list-block-icon,.list-block-title{
  display: float;
  float:left;
}

.list-block-icon{
  width:40rpx;
  height:40rpx;
  margin-top:20rpx;
  margin-left:15rpx;
}

.list-block-title{
  height:80rpx;
  line-height: 80rpx;
  font-size:22rpx;
  margin-left:15rpx;
}

.list-block-try{
  display: float;
  float:right;
  width:40rpx;
}

.list-block-try-icon{
  width:30rpx;
  height:30rpx;
  margin-top:15rpx;
  margin-left:6rpx;
}

.list-block-try-text{
  width:45rpx;
  text-align: center;
  font-size:20rpx;
  color:#12b6f5;
  line-height: 15rpx;
}

.info-title{
  font-size:28rpx;
  padding-left:15rpx;
  height:70rpx;
    border-top:15rpx solid #f0f3fa;
    border-bottom:1rpx solid #f0f3fa;
    line-height: 70rpx;
}

.info-content{
  padding:20rpx 15rpx 20rpx 15rpx;
  text-indent: 50rpx;
  font-size:25rpx;
  line-height: 40rpx;
}
