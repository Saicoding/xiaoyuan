<!--pages/huodong/huodong.wxml-->
<view class="container">
  <!-- 头部banner -->
  <swiper class="swiper" interval="3000" autoplay="true" circular="true" indicator-dots="true" indicator-color="rgb(216, 216, 216);" indicator-active-color="white">
    <block wx:for="{{banners}}" wx:key="k">
      <swiper-item>
        <image src="{{item.pic}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>

  <!-- banner下的4个按钮 -->

  <swiper class="bars" display-multiple-items="{{types.length+1>=4?4:types.length+1}}" circular duration="100">
    <swiper-item>
      <view class="bars-huodong">最新活动</view>
    </swiper-item>
    <swiper-item wx:for="{{types}}" wx:for-item="type" wx:key="t">
      <view data-typesid="{{type.id}}" class="bars-btn" bindtap='GOshetuan' hover-class='select1' hover-stay-time='500'>{{type.name}}</view>
    </swiper-item>
  </swiper>

  <!-- 热门活动 -->
  <view class="huodong">
    <view class="title">
      <image class="title-icon" src="/imgs/lines.png"></image>
      <view class="title-text">热门活动</view>
    </view>

    <view wx:for="{{huodongs}}" wx:for-item="huodong" wx:key="h">
      <view class="huodong-detail">
        <image class="huodong-detail-img" src="{{huodong.src}}" bindtap='GOhuodongDetail' hover-class='select2' hover-stay-time='500'></image>
        <view class="huodong-detail-down" bindtap='GOhuodongDetail' hover-class='select2' hover-stay-time='500'>
          <view class="huodong-detail-down-title">{{huodong.title}}
            <span style="color:{{huodong.over?'red':'green'}}">【{{huodong.status}}】</span>
          </view>
          <view class="huodong-detail-down-info">{{huodong.info}}</view>
        </view>

        <view class="huodong-tequan" bindtap='GOshetuanOryouhui' hover-class='select2' hover-stay-time='500'>#特权·优惠#</view>

        <view class="huodong-bottom" bindtap='GOhuodongDetail' hover-class='select2' hover-stay-time='500'>
          <view class="huodong-bottom-left">
            <image class="huodong-bottom-left-icon" src="{{headPic}}" wx:for="{{huodong.headPics}}" wx:for-item="headPic" wx:key="p">
            </image>
            <image class="huodong-bottom-left-icon" src="/imgs/sheng.png"></image>
          </view>
          <view class="huodong-bottom-right">已报名：{{huodong.num}}人</view>
        </view>
      </view>
    </view>
  </view>
</view>