/* pages/huodong/dongtaiDetail/dongtaiDetail.wxss */

/* 动态信息 */
.dongtai{
  width:710rpx;
  margin:0 auto;
  margin-top:50rpx;
}

.dongtai-info{
  display: flex;
}

.dongtai-info-pic{
  width:80rpx;
  height:80rpx;
  border-radius: 80rpx;
}

.dongtai-info-mid,.dongtai-info-mid-nickname,.dongtai-info-mid-time{
  width:490rpx;
  line-height: 40rpx;
}

.dongtai-info-mid{
  margin-left:25rpx;
}

.dongtai-info-mid-nickname{
  height:40rpx;
  color:rgb(0, 68, 255);
  font-size:25rpx;
}

.dongtai-info-mid-time{
  color:rgb(161, 161, 161);
  font-size:22rpx;
  height:40rpx;
  letter-spacing: 1rpx;
}

.dongtai-info-guanzhu{
  height:40rpx;
  line-height: 40rpx;
  font-size:22rpx;
  text-align: center;
  width:120rpx;
  color:white;
  border-radius: 8rpx;
  margin-top:20rpx;
}

.dongtai-content-text{
  width:100%;
  font-size:25rpx;
  line-height: 40rpx;
  margin-top:15rpx;
  margin-bottom:15rpx;
}

.dongtai-content-img{
  width:710rpx;
  margin-bottom:10rpx;
}

.dongtai-picnum{
  clear: both;
  position: relative;
  letter-spacing: 1rpx;
  line-height: 35rpx;
  text-align: center;
  font-size:20rpx;
  width:90rpx;
  padding-left:8rpx;
  padding-right:8rpx;
  height:35rpx;
  background-color: rgba(122, 122, 122, 0.5);
  color:white;
  border-radius: 8rpx;
  left:600rpx;
  top:-50rpx;
}

.dongtai-like{
  display: flex;
}

.dongtai-like-icon{
  width:30rpx;
  height:30rpx;
}

.dongtai-like-num{
  height:30rpx;
  line-height: 30rpx;
  font-size:25rpx;
  color:#d81e06;
  margin-left:10rpx;
  margin-bottom:30rpx;
}
/* 中间的赞 */
.like{
  background: #f0f3fa;
  width:100%;
  height:100rpx;
  padding-top:20rpx;
}

.like-icon{
  display: block;
  width:50rpx;
  height:50rpx;
  margin:0 auto;
}

.like-num{
  width:100%;
  text-align: center;
  font-size:22rpx;
  color:rgb(0, 68, 194);
}

/* 评论输入框 */


.comment{
  position: fixed;
  width:710rpx;
  bottom: 0rpx;
  height:80rpx;
  border-top:1rpx solid rgb(218, 218, 218);
  background: white;
  opacity: 0.9;
  overflow: hidden;
  margin-left:15rpx;
   border-radius: 10rpx;
}

.comment-input,.comment-button,.comment-icon{
  display: float;
  float:left;
}

.comment-input{
  background: rgb(224, 224, 224);
  height:60rpx;
  border-radius: 10rpx;
  width:483rpx;
  margin-top:10rpx;
  font-size:25rpx;
  padding-left:70rpx;
  margin-left:-50rpx;
}

.comment-icon{
  position: relative;
  width:44rpx;
  height:44rpx;
  z-index: 10000;
  top:18rpx;
  left:10rpx;
  border-radius: 10rpx;
}

.comment-button{
  width:125rpx;
  height:60rpx;
  color:white;
  margin-top:10rpx;
  font-size:25rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius:5rpx;
  margin-left:40rpx;
  background: rgb(253, 23, 23);
}

.comments{
  width:710rpx;
  margin-left:20rpx;
  margin-bottom:20rpx;
}

.comments-top{
  height:70rpx;
  line-height: 70rpx;
  font-size:25rpx;
}

.comments-top-icon,.comments-top-text{
  display: float;
  float:left;
}

.comments-top-icon{
  width:26rpx;
  height:26rpx;
  margin-top:22rpx;
  margin-left:15rpx;
}

.comments-top-text{
  margin-left:40rpx;
  font-size:25rpx;
  letter-spacing: 1rpx;
}

.comments-content-block{
  display: inline-flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
  border-top:1rpx solid rgb(235, 235, 235);
}

.comment-img{
  height:80rpx;
  width:80rpx;
  border-radius: 80rpx;
  margin-left:10rpx;
  margin-top:10rpx;
}

.comment-right{
  width:580rpx;
  margin-left:40rpx;
}

.comment-right-line1{
  font-size:25rpx;
}

.comment-right-line2{
  color:rgb(197, 197, 197);
  font-size:22rpx;
  height:70rpx;
  line-height: 70rpx;
}

.comment-right-line3{
  font-size:25rpx;
}


.hasNoMessage-img{
  display: block;
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
}

.hasNoMessage-text{
  width:100%;
  font-size:25rpx;
  color:rgb(182, 182, 182);
  text-align: center;
}

.loading-block {
  width: 100%;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  margin: 0rpx auto;
  text-align: center;
  color: rgb(156, 156, 156);
  margin-bottom: 100rpx;
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.select2{
  opacity: 0.7
}