/* pages/huodong/addDongtai/addDongtai.wxss */
page{
  background: #f0f3fa;
}

/* 上面部分 */

.section{
  width:710rpx;
  height:200rpx;
  padding:20rpx 20rpx 20rpx 20rpx;
  font-size:25rpx;
  margin-top:20rpx;
  background: white;
}

.clear{
  position: relative;
  border:1rpx solid rgb(226, 226, 226);
  font-size:25rpx;
  text-align: center;
  height:40rpx;
  line-height: 40rpx;
  letter-spacing: 1rpx;
  border-radius: 40rpx;
  width:80rpx;
  background: white;
  top:-60rpx;
  left:650rpx;
}

/* 下面部分 */
.addpic{
  width:100%;
  background: white;
  padding-bottom:25rpx;
}

.addpic-block,.slide-image{
  float: left;
  width:215rpx;
  height:215rpx;
  margin-top:25rpx;
  border:1rpx solid rgb(216, 216, 216);
  border-radius: 10rpx;
  margin-left:25rpx;
}

.addpic-block-icon{
  width:80rpx;
  height:80rpx;
  margin-left:67.5rpx;
  margin-top:30rpx;
}

.addpic-block-text{
  width:215rpx;
  text-align: center;
  color:rgb(155, 155, 155);
  font-size:32rpx;
  margin-top:10rpx;
}

.model{
  position: relative;
  width:215rpx;
  background: black;
  border-radius: 10rpx;
  border:1rpx solid rgb(216, 216, 216);
  opacity: 0.3;
  left:-1rpx;
  height:215rpx;
  top:-1rpx;
}

.imgLoadingimg{
  position: relative;
  width:50rpx;
  height:50rpx;
  top:-140rpx;
  left:82.5rpx;
}

.delete{
  position: relative;
  width:50rpx;
  height:50rpx;
  left:190rpx;
  top:-25rpx;
  opacity: 0.6;
  z-index: 100001;
}

.submit{
  width:90%;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 10rpx;
  border:none;
  color:white;
  font-size:32rpx;
  margin:40rpx auto;
  background: linear-gradient(to right,#ffa43d,#fe8800);
}

.select1{
  background: rgb(224, 224, 224);
}

.select2{
   background: linear-gradient(to right,#fcc78b,#ff9f32);
}