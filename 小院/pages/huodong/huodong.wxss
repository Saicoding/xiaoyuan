/* pages/huodong/huodong.wxss */
page{
  background: #f0f3fa;
}
/* banner */
.swiper{
  width:750rpx;
  height:375rpx;
}

.slide-image{
  width:750rpx;
  height:375rpx;
}

/* 四个按钮 */
.bars{
  display: flex;
  justify-content: space-around;
  margin-top:40rpx;
}

.bars-huodong,.bars-btn{
  width:150rpx;
  height:60rpx;
  font-size:25rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
}

.bars-huodong{
  background: #fe555c;
  color:white;
}

.bars-btn{
  background: white;
  color:rgb(121, 121, 121);
  border:1rpx solid rgb(236, 236, 236);
}

/* 热门活动 */
.huodong{
  width:89.5%;
  background: white;
  margin:30rpx auto;
  border-radius: 15rpx;
  padding:30rpx 20rpx 30rpx 20rpx;
  box-shadow: #dcedf8 3rpx 3rpx 8rpx 1rpx ;
}

.title{
  display: flex;
  height:40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.title-icon{
  width:40rpx;
  height:40rpx;
}

.title-text{
  font-size:28rpx;
  margin-left:20rpx;
}

.huodong-detail{
  padding-bottom:30rpx;
  margin-bottom:30rpx;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.huodong-detail-img{
  width:100%;
  height:350rpx;
}

.huodong-detail-down{
  display: flex;
}

.huodong-detail-down-title{
  font-size:25rpx;
  width:580rpx;
  line-height:40rpx;
}

.huodong-detail-down-info{
  font-size:28rpx;
  color:red;
  width:150rpx;
  text-align: center;
}

.huodong-tequan{
  height:70rpx;
  line-height: 60rpx;
  color:rgb(253, 122, 0);
  font-size:20rpx;
}

.huodong-bottom{
  display: flex;
}

.huodong-bottom-left{
  width:580rpx;
}

.huodong-bottom-left-icon{
  width:50rpx;
  height:50rpx;
  border-radius: 50rpx;
  margin-right:10rpx;
}

.huodong-bottom-right{
  width:200rpx;
  height:50rpx;
  line-height: 50rpx;
  color:rgb(175, 175, 175);
  font-size:20rpx;
  text-align: right;
  letter-spacing: 1rpx;
}

.select1{
  background: rgb(224, 224, 224);
}