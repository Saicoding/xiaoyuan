/* pages/huodong/huodong.wxss */

page {
  background: #f0f3fa;
}

/* banner */

.swiper {
  width: 750rpx;
  height: 440rpx;
}

.slide-image {
  width: 750rpx;
  height: 440rpx;
}

/* 四个按钮 */
.bars {
  display: flex;
  width: 750rpx;
  height: 120rpx;
  align-items: center;
  white-space: nowrap;
}

.fixed{
  position: fixed;
  top:0;
}

.bars-huodong, .bars-btn {
  display: inline-block;
  width: 150rpx;
  height: 60rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}



.bars-huodong {
  background: #fe555c;
  color: white;
}

.bars-btn {
  background: white;
  color: rgb(121, 121, 121);
  border: 1rpx solid rgb(236, 236, 236);
}

/* 活动 */

.huodong {
  width: 690rpx;
  background: white;
  margin: 30rpx auto;
  margin-top: 0rpx;
  border-radius: 15rpx;
  padding: 30rpx 20rpx 30rpx 20rpx;
  box-shadow: #dcedf8 3rpx 3rpx 8rpx 1rpx;
}

.title {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.title-icon {
  width: 40rpx;
  height: 40rpx;
}

.title-text {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.huodong-detail {
  padding-bottom: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.huodong-detail-img {
  width: 100%;
  height: 350rpx;
}

.huodong-detail-down {
  display: flex;
}

.huodong-detail-down-title {
  font-size: 25rpx;
  width: 580rpx;
  line-height: 40rpx;
}

.huodong-detail-down-info {
  font-size: 28rpx;
  color: red;
  width: 150rpx;
  text-align: center;
}

.huodong-tequan {
  height: 70rpx;
  line-height: 60rpx;
  color: rgb(253, 122, 0);
  font-size: 20rpx;
}

.huodong-bottom {
  display: flex;
}

.huodong-bottom-left {
  width: 580rpx;
  margin-left: 20rpx;
}

.huodong-bottom-left-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 10rpx;
  box-shadow: -5rpx 3rpx 3rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-left: -20rpx;
}

.record-pic-model {
  width: 62rpx;
  height: 62rpx;
  font-size: 40rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 62rpx;
  background: rgba(48, 48, 48, 0.1);
  color: white;
}

.huodong-bottom-right {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: rgb(175, 175, 175);
  font-size: 20rpx;
  text-align: right;
  letter-spacing: 1rpx;
}

.noHuodong{

}

.noHuodong-img{
  display: block;
  margin:0 auto;
  width:200rpx;
  height:200rpx;
}

.noHuodong-text{
  text-align: center;
  color:rgb(177, 177, 177);
  font-size:22rpx;
  margin-top:10rpx;
}

.load-img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 200rpx auto;
}

.loading-block {
  width: 100%;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  margin: 0rpx auto;
  margin-bottom: 20rpx;
  text-align: center;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.select1 {
  background: rgb(224, 224, 224);
}

.select2 {
  opacity: 0.4;
}
