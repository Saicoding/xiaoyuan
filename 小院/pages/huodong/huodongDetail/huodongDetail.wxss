/* pages/huodong/huodongDetail/huodongDetail.wxss */
.myscroll{
  
}
.top{
  width:100%;
  height:405rpx;
}

.load-img{
  display: block;
  width:96rpx;
  height:112rpx;
  margin:0rpx auto;
  margin-top:150rpx;
}

.title{
  width:710rpx;
  margin:0 auto;
  font-size:28rpx;
  line-height: 40rpx;
  margin-top:10rpx;
}

.info{
  width:710rpx;
  margin:0 auto;
  font-size:25rpx;
  color:rgb(0, 162, 255);
  height:60rpx;
  line-height: 60rpx;
}

.type{
  display: flex;
}

.type-left{
  color:rgb(172, 172, 172);
  font-size:22rpx;
  border:1rpx solid rgb(221, 220, 220);
  width:70rpx;
  height:40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-left:20rpx;
  margin-top:20rpx;
  border-radius: 5rpx;
}

.type-right{
  color:red;
  font-size:35rpx;
  width:630rpx;
  text-align: right;
  font-weight: bold;
}

/* 中间部分 */
.mid{
  border-top:1rpx solid rgb(228, 228, 228);
  margin-top:30rpx;
}

.mid-line1{
  display: flex;
  margin-top:40rpx;
}

.mid-line1-icon{
  width:100rpx;
  height:100rpx;
  border-radius: 100rpx;
  margin-left:20rpx;
}

.mid-line1-midblock{
  width:500rpx;
  margin-left:20rpx;
}

.mid-line1-midblock-text1,.mid-line1-midblock-text2{
  height:50rpx;
}

.mid-line1-midblock-text1{
  line-height: 55rpx;
  font-size:28rpx;
  color:black;
}

.mid-line1-midblock-text2{
  line-height: 45rpx;
  font-size:23rpx;
  color:rgb(196, 196, 196);
}

.mid-line1-righticon{
  width:70rpx;
  height:70rpx;
  margin-top:10rpx;
}

.mid-status{
  display: flex;
  margin-top:35rpx;
}

.mid-status-line{
  width:200rpx;
  height:4rpx;
  margin-top:8rpx;
}

.mid-status-circle{
  width:21rpx;
  height:21rpx;
  border-radius: 21rpx;
}

.mid-status-text{
  margin: 0 auto;
  display: flex;
  margin-top:20rpx;
  justify-content: space-around;
  width:87%;
  margin-bottom: 30rpx;
}

.mid-status-text-info{
  font-size:25rpx;
}

.mid-info{
  display: flex;
  border-top:1rpx solid rgb(228, 228, 228);
}

.mid-info-icon{
  width:40rpx;
  height:40rpx;
  margin-top:25rpx;
  margin-bottom:25rpx;
  margin-left:20rpx;
}

.mid-info-text{
  font-size:25rpx;
  margin-left:20rpx;
  margin-top:25rpx;
  line-height: 40rpx;
  margin-bottom:25rpx;
}

/* 报名的人*/
.record{
  position: relative;
  display: flex;
  justify-content: space-between;
  height:120rpx;
  border-top:20rpx solid #f0f3fa;
  border-bottom:20rpx solid #f0f3fa;
}


.record-pic-blank{
  height:120rpx;
  margin-right:40rpx;
}

.record-num{
  height:60rpx;
  border-radius: 0rpx 50rpx 50rpx 0rpx;
  background: #0096fa;
  font-size:22rpx;
  margin-top:30rpx;
  color:white;
  padding-right:20rpx;
  padding-left:10rpx;
  line-height: 60rpx;
}

.record-pic{
  box-shadow: -5rpx 3rpx 3rpx 4rpx rgba(0, 0, 0,0.1);
  margin-left:-20rpx;
  width:70rpx;
  height:70rpx;
  border-radius: 70rpx;
  margin-top:25rpx;
  z-index:99;
}

.record-pic-model{
  width:70rpx;
  height:70rpx;
  font-size:50rpx;
  line-height: 75rpx;
  text-align: center;
  border-radius: 70rpx;
  background: rgba(48, 48, 48,0.5);
  color:white;
}

/* 活动详情和动态 */
.detail-xiangqing{
  font-size:28rpx;
  padding-left:20rpx;
  padding-right:20rpx;
}
.detailbar{
  clear:both;
  display: flex;
  justify-content: space-around;
  width:640rpx;
  margin:0 auto;
 
}

.detailbar-item{
  width:320rpx;
  margin-top:20rpx;
}

.detailbar-item-icon{
  width:40rpx;
  height:40rpx;
  margin-left:140rpx;
}

.detailbar-item-title{
  width:320rpx;
  text-align: center;
  font-size:25rpx;
}

.detailbar-line{
  position:relative;
  width:200rpx;
  height:6rpx;
  background: #0096fa;
  top:25rpx;
  left:115rpx;
}

.detail-line{
  position: relative;
  width:100%;
  border-top:1rpx solid rgb(240, 240, 240);
  top:30rpx;
}
/* 详情内容 */
.detail-content{

}

/* 动态信息 */
.dongtai{
  width:710rpx;
  margin:0 auto;
  margin-top:50rpx;
  border-bottom: 1rpx solid rgba(214, 214, 214,0.7);
}

.dongtai-info{
  display: flex;
}

.dongtai-info-pic{
  width:80rpx;
  height:80rpx;
  border-radius: 80rpx;
}

.dongtai-info-mid,.dongtai-info-mid-nickname,.dongtai-info-mid-time{
  width:490rpx;
  line-height: 40rpx;
}

.dongtai-info-mid{
  margin-left:25rpx;
}

.dongtai-info-mid-nickname{
  height:40rpx;
  color:rgb(0, 68, 255);
  font-size:25rpx;
}

.dongtai-info-mid-time{
  color:rgb(161, 161, 161);
  font-size:22rpx;
  height:40rpx;
  letter-spacing: 1rpx;
}

.dongtai-info-guanzhu{
  height:40rpx;
  line-height: 40rpx;
  font-size:22rpx;
  text-align: center;
  width:120rpx;
  color:white;
  border-radius: 8rpx;
  margin-top:20rpx;
}

.dongtai-content-text{
  width:100%;
  font-size:25rpx;
  line-height: 40rpx;
  margin-top:15rpx;
  margin-bottom:15rpx;
}

.dongtai-content-img{
  display: float;
  float:left;
  width:180rpx;
  height:180rpx;
  margin-bottom:10rpx;
}

.dongtai-picnum{
  clear: both;
  position: relative;
  letter-spacing: 1rpx;
  line-height: 35rpx;
  text-align: center;
  font-size:20rpx;
  width:90rpx;
  padding-left:8rpx;
  padding-right:8rpx;
  height:35rpx;
  background-color: rgba(122, 122, 122, 0.5);
  color:white;
  border-radius: 8rpx;
  left:600rpx;
  top:-50rpx;
}

.dongtai-like{
  display: flex;
}

.dongtai-like-icon{
  width:30rpx;
  height:30rpx;
}

.dongtai-like-num{
  height:30rpx;
  line-height: 30rpx;
  font-size:25rpx;
  color:#d81e06;
  margin-left:10rpx;
  margin-bottom:30rpx;
}

/* 底部 */

.bottom{
  width:100%;
  display: flex;
  position: fixed;
  height:80rpx;
  line-height: 80rpx;
  bottom:0rpx;
}

.bottom-left{
  width:30%;
  text-align: center;
  font-size:35rpx;
  color:rgb(255, 0, 0);
  background: white;
}

.bottom-right,.bottom-dongtai{
  background: linear-gradient(to right,#ffb157,#fe8800);
  font-size:28rpx;
  color:white;
  text-align: center;
    letter-spacing: 1rpx;
}

.bottom-right{
  width:70%;
}

.bottom-dongtai{
  width:100%;
}
/* 没有动态时的图片显示 */
.noDongtai{
  margin-top:40rpx;
}
.noDongtai-img{
  display: block;
  width:200rpx;
  height:200rpx;
  margin: 0 auto;
}

.noDongtai-text{
  width:100%;
  color:rgb(160, 160, 160);
  font-size:22rpx;
  text-align: center;
  margin-top:10rpx;
}

.top-model{
  position: relative;
  width:50rpx;
  height:50rpx;
  border-radius: 60rpx;
  background: rgba(0, 0, 0,0.3);
  top:-80rpx;
  left:670rpx;
}

.top-shoucang{
  width:30rpx;
  height:30rpx;
  margin-top:10rpx;
  margin-left:10rpx;
}

.loading-img{
  display: block;
  margin:0 auto;
  width:40rpx;
  height:40rpx;
  margin-top:100rpx;
}

.loading-block {
  width: 100%;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 50rpx;
  margin: 0rpx auto;
  text-align: center;
  margin-top:20rpx;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.select1{
  background: linear-gradient(to right,#ffc380,#ffa033);
}

.select2{
  opacity: 0.7
}
