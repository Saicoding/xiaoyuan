<!--pages/huodong/huodongDetail/huodongDetail.wxml-->
<scroll-view scroll-y class="myscroll" style= "height:{{windowHeight-120}}rpx;">
  <!-- banner -->
  <image class="top" src="{{huodong.banner}}"> </image>

  <!-- 标题 -->
  <view class="title">
    {{huodong.title}}<span style="color:{{huodong.over?'red':'rgb(2, 219, 2)'}}"> 【{{huodong.status}}】</span>
  </view>

  <!-- 校园·社团 -->
  <view class="info">#{{huodong.info}}#</view>

  <!-- 线下 免费 -->
  <view class="type">
    <view class="type-left">{{huodong.type}}</view>
    <view class="type-right">{{huodong.price}}</view>
  </view>

  <!-- 中间部分 -->
  <view class="mid">
    <view class="mid-line1">
      <image class ="mid-line1-icon" src="{{huodong.from.pic}}"></image>
      <view class = "mid-line1-midblock">
        <view class = "mid-line1-midblock-text1">{{huodong.from.name}}</view>
        <view class = "mid-line1-midblock-text2">来自 {{huodong.fromtype}}</view>
      </view>
      <image class="mid-line1-righticon" src="/imgs/chat.png"></image>
    </view>
    <!-- 报名状态显示 -->
    <view class="mid-status">
      <view class="mid-status-line" style="background:{{huodong.jindu>=1?'#0096fa':'rgb(228, 228, 228)'}};margin-left:20rpx;width:130rpx;"></view>
      <view class="mid-status-circle" style="background:{{huodong.jindu==1?'#fe555d':'rgb(228, 228, 228)'}}"></view>
      <view class="mid-status-line" style="background:{{huodong.jindu>=2?'#0096fa':'rgb(228, 228, 228)'}}"></view>
      <view class="mid-status-circle" style="background:{{huodong.jindu==2?'#fe555d':'rgb(228, 228, 228)'}}"></view>
      <view class="mid-status-line" style="background:{{huodong.jindu>=3?'#0096fa':'rgb(228, 228, 228)'}}"></view>
      <view class="mid-status-circle" style="background:{{huodong.jindu==3?'#fe555d':'rgb(228, 228, 228)'}}"></view>
      <view class="mid-status-line" style="background:rgb(228, 228, 228);width:130rpx;"></view>
    </view>
    <!-- 报名状态文字 -->
    <view class="mid-status-text">
      <view class="mid-status-text-info" style="color:{{huodong.jindu==1?'#0096fa':'rgb(196, 196, 196)'}}">报名中</view>
      <view class="mid-status-text-info" style="color:{{huodong.jindu==2?'#0096fa':'rgb(196, 196, 196)'}}">进行中</view>
      <view class="mid-status-text-info" style="color:{{huodong.jindu==3?'#0096fa':'rgb(196, 196, 196)'}}">已结束</view>
    </view>
    <!-- 活动时间 -->
    <view class="mid-info">
      <image class="mid-info-icon" src="/imgs/clock2.png"></image>
      <view class="mid-info-text">{{huodong.time}}</view>
    </view>
    <!-- 集合地 -->
    <view class="mid-info">
      <image class="mid-info-icon" src="/imgs/jihe.png"></image>
      <view class="mid-info-text">{{huodong.position}}</view>
    </view>
  </view>

  <!-- 报名的人 -->
  <view class="record">
    <view class="record-num">已有{{huodong.num}}人报名</view>
    <image class='record-pic' src="/imgs/sheng.png"> </image>
    <image class='record-pic' wx:for="{{pics}}" wx:for-item="pic" wx:key="k" src="{{pic}}"></image>
  </view>

  <!-- 活动详情和动态 -->
  <view class="detailbar">
    <view class="detailbar-item" data-index="0" bindtap ="changeMulu">
      <image class ="detailbar-item-icon" src="{{barIndex == 0?'/imgs/detail2.png':'/imgs/detail1.png'}}"></image>
      <view class ="detailbar-item-title" style="color:{{barIndex == 0?'#0096fa':'black'}}">活动详情</view>
    </view>

    <view class="detailbar-item" data-index="1" bindtap ="changeMulu">
      <image class ="detailbar-item-icon" src="{{barIndex == 1?'/imgs/dongtai2.png':'/imgs/dongtai1.png'}}"></image>
      <view class ="detailbar-item-title" style="color:{{barIndex == 1?'#0096fa':'black'}}">活动动态</view>
    </view>
  </view>
  <view class="detail-line"></view>
  <view class = "detailbar-line" animation = "{{moveData}}"></view>

  <!-- 具体内容 -->
  <view class ="detail-content">
    <!-- 活动详情的页面 -->
    <view wx:if="{{barIndex==0}}" class ="detail-xiangqing">
      <rich-text nodes="{{huodong.content}}"></rich-text>
    </view>

    <!-- 动态页面 -->
    <view wx:if="{{barIndex==1}}" class ="detail-dongtai">
      <view wx:for="{{huodong.dongtais}}" wx:for-item="dongtai" wx:key="d">
        <view class="dongtai">
          <!-- 动态的最上面部分 -->
          <view class ="dongtai-info">
            <image class ="dongtai-info-pic" src = "{{dongtai.pic}}"></image>
            <view class ="dongtai-info-mid">
              <view class ="dongtai-info-mid-nickname">{{dongtai.nickname}}</view>
              <view class ="dongtai-info-mid-time">{{dongtai.time}}</view>
            </view>
            <view class ="dongtai-info-guanzhu">已关注</view>
          </view>

          <!-- 动态内容 -->
          <view class ="dongtai-content">
            <view class ="dongtai-content-text">{{dongtai.content}}</view>
            <view class ="dongtai-content-imgs">
              <view  wx:for="{{dongtai.imgs}}" wx:for-item="img" wx:key="i">
                <image src="{{img}}" class ="dongtai-content-img" style="margin-right:{{(index+1)%3==0?0:10}}rpx"></image>
              </view>
            </view>
          </view>

          <!-- 图片的数量 -->
          <view class ="dongtai-picnum">共{{dongtai.imgs.length}}张</view>
          <!-- 最下面的喜欢按钮 -->
          <view class="dongtai-like">
            <image class ="dongtai-like-icon" src="/imgs/heart1.png"></image>
            <view class ="dongtai-like-num">{{dongtai.likeNum}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>


</scroll-view>

<!-- 活动详情时的底部信息 -->
<view wx:if="{{barIndex==0}}" class ="bottom">
  <view class ="bottom-left">{{huodong.price}}</view>
  <view class ="bottom-right">报名参加</view>
</view>

<!-- 活动动态时的底部信息 -->
<view wx:if="{{barIndex==1}}" class ="bottom">
  <view class ="bottom-dongtai">我要发布动态</view>
</view>