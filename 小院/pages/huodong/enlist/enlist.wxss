/* pages/huodong/enlist/enlist.wxss */

.container {
  padding-bottom: 80rpx;
}

/* 最上面的标题 */

.title {
  width: 720rpx;
  font-size: 28rpx;
  margin: 0 auto;
  line-height: 40rpx;
  margin-top: 20rpx;
}

.huodonginfo {
  display: flex;
  margin: 0 auto;
  margin-top: 20rpx;
  width: 720rpx;
}

.huodonginfo-icon {
  width: 30rpx;
  height: 30rpx;
}

.huodonginfo-text {
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: rgb(134, 134, 134);
  margin-left: 10rpx;
}

/* 选择日期 */

.dateSelect, .dateSelect-text {
  color: rgb(134, 134, 134);
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
}

.dateSelect {
  font-size: 25rpx;
  background: #f0f3fa;
  border: 1rpx solid rgb(236, 236, 236);
  margin-top: 40rpx;
}

.dateSelect-text {
  font-size: 22rpx;
}

.dateblock {
  width: 720rpx;
  margin: 0 auto;
  height: auto;
  padding-bottom: 15rpx;
}

.date-item {
  display: block;
  float: left;
  font-size: 25rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 165rpx;
  background: linear-gradient(to bottom, #eee, #dbdbdb, #eee);
  border-radius: 10rpx;
  color: rgb(139, 139, 139);
  margin-top: 15rpx;
}

/* 活动时间 */

.time {
  clear: both;
  color: rgb(134, 134, 134);
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-size: 25rpx;
  background: #f0f3fa;
  border: 1rpx solid rgb(236, 236, 236);
  margin-top: 20rpx;
}

.time-icon {
  width: 150rpx;
  height: 84rpx;
  border: 1rpx solid #0096fa;
  text-align: center;
  font-size: 35rpx;
  line-height: 84rpx;
  border-radius: 10rpx;
  color: #fe8800;
  margin-top: 30rpx;
  margin-left: 15rpx;
  background: url('data:image/jpeg;base64,');
  background-size: 100% 100%;
}

.taocan {
  background-position: bottom right;
  background-repeat: no-repeat;
  background-size: 60% 60%;
  width: 200rpx;
  height: 112rpx;
}

/* 参加人信息 */

.info {
  width: 720rpx;
  margin: 0 auto;
}

.info-block {
  width: 100%;
  display: flex;
  height: 90rpx;
  border-bottom: 1rpx solid rgb(236, 236, 236);
}

.info-block-text {
  height: 90rpx;
  font-size: 28rpx;
  line-height: 90rpx;
}

.info-block-input {
  font-size: 25rpx;
  height: 90rpx;
  width: 600rpx;
  padding-left: 30rpx;
}

/* 底部 */
.bottom {
  width: 100%;
  display: flex;
  position: fixed;
  height: 80rpx;
  line-height: 80rpx;
  bottom: 0rpx;
  z-index: 10000;
}

.bottom-left {
  width: 30%;
  text-align: center;
  font-size: 35rpx;
  color: rgb(255, 0, 0);
  background: white;
}

.bottom-right {
  background: linear-gradient(to right, #ffb157, #fe8800);
  font-size: 28rpx;
  color: white;
  text-align: center;
  letter-spacing: 1rpx;
  width: 70%;
}

.select1 {
  background: linear-gradient(to right, #ffc380, #ffa033);
}
