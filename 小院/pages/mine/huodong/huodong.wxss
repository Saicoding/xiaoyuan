/* pages/mine/huodong/huodong.wxss */
/* 热门活动 */
page{
  background: #f5f5f5;
}
.huodong{
  width:89.5%;
  background: white;
  margin:30rpx auto;
  margin-top:25rpx;
  border-radius: 15rpx;
  padding:30rpx 20rpx 30rpx 20rpx;
  box-shadow: #dcedf8 3rpx 3rpx 8rpx 1rpx ;
}

.title{
  display: flex;
  height:40rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
}

.title-icon{
  width:40rpx;
  height:40rpx;
}

.title-text{
  font-size:28rpx;
  margin-left:20rpx;
}

.huodong-detail{
  padding-bottom:30rpx;
  margin-bottom:30rpx;
  border-bottom: 1rpx solid rgb(226, 226, 226);
}

.icon{
  position: absolute;
  background: rgb(0, 194, 0);
  color:white;
  font-size:22rpx;
  height:40rpx;
  width:110rpx;
  text-align: center;
  border-radius: 40rpx 0rpx 0rpx 40rpx;
  line-height: 40rpx;
  left:603rpx;
}

.huodong-detail-img{
  width:100%;
  height:350rpx;
}

.huodong-detail-down{
  display: flex;
}

.huodong-detail-down-title{
  font-size:25rpx;
  width:580rpx;
  line-height:40rpx;
}

.huodong-detail-down-info{
  font-size:28rpx;
  color:red;
  width:150rpx;
  text-align: center;
}

.huodong-tequan{
  height:70rpx;
  line-height: 60rpx;
  color:rgb(253, 122, 0);
  font-size:20rpx;
}

.huodong-bottom{
  display: flex;
}

.huodong-bottom-left{
  width:580rpx;
  margin-left:20rpx;
}

.huodong-bottom-left-icon{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50rpx;
  margin-right: 10rpx;
  box-shadow: -5rpx 3rpx 3rpx 4rpx rgba(0, 0, 0, 0.1);
  margin-left: -20rpx;
}

.huodong-bottom-right{
  width:200rpx;
  height:50rpx;
  line-height: 50rpx;
  color:rgb(175, 175, 175);
  font-size:20rpx;
  text-align: right;
  letter-spacing: 1rpx;
}

.viewForm{
  color:#0096fa;
  font-size:22rpx;
  text-align: center;
  height:80rpx;
  line-height: 80rpx;
}

.load-img {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 200rpx auto;
}

.loading-block {
  width: 100%;
  height: 50rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  margin: 0rpx auto;
  text-align: center;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}

.hasHuodong-img{
  width:750rpx;
}

.hasHuodong-text{
  color:rgb(163, 163, 163);
  font-size:25rpx;
  text-align: center;
}

.select1{
  background: rgb(224, 224, 224);
}

.select2{
  opacity: 0.4;
}