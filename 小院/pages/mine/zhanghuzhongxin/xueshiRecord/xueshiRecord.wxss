.block{
  border-bottom: 1rpx solid rgba(206, 206, 206, 0.5);
  padding-left:20rpx;
  padding-right:20rpx;
}

.block-info{
  display: flex;
  justify-content: space-between;
}

.block-info-left,.block-info-right{
  font-size:25rpx;
}

.block-info-left{
  color:black;
  width:590rpx;
  line-height: 40rpx;
  margin-top:20rpx;
}

.block-info-right{
    height:40rpx;
  line-height: 40rpx;
  color:rgb(0, 174, 255);
  font-weight: bold;
  width:120rpx;
  text-align: right;
  margin-top:20rpx;
}

.block-time{
  color:rgb(173, 173, 173);
  font-size:22rpx;
  margin-top:10rpx;
  margin-bottom:15rpx;
}

.loading-block {
  width: 100%;
  height: 80rpx;
  font-size: 23rpx;
  line-height: 80rpx;
  margin: 0rpx auto;
  text-align: center;
  margin-bottom: 15rpx;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}