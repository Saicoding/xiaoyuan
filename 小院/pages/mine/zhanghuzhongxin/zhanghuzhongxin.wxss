/* pages/mine/zhanghuzhongxin/zhanghuzhongxin.wxss */

page {
  background: #f0f3fa;
}

/* 最上面部分 */

.up {
  background: linear-gradient(to right, #fd3718, #fd7c68);
  color: white;
  padding: 30rpx;
  position: relative;
  align-items: center;
  z-index: 0;
}

.up-title, .up-title-icon {
  height: 40rpx;
}

.up-title {
  display: flex;
}

.up-title-icon {
  width: 40rpx;
}

.up-title-text {
  line-height: 40rpx;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.up-num {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 80rpx;
}

.up-jifen {
  font-size: 25rpx;
}

.up-backimg1 {
  position: absolute;
  left: 24rpx;
  bottom: 0rpx;
  width: 702rpx;
  height: 114rpx;
  z-index: 10;
  opacity: 0.3;
}

.up-backimg2 {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 20rpx;
  z-index: 10000;
}

/* 中间部分 */

.mid {
  background: white;
  display: flex;
  flex-shrink: 0;
  justify-content: space-around;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  height: 150rpx;
}

.mid-item {
  width: 249rpx;
  text-align: center;
}

.mid-item-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.mid-item-text {
  font-size: 25rpx;
  width: 249rpx;
  height: 50rpx;
  line-height: 50rpx;
}

/* 下面部分 */

.down {
  background: white;
  margin-top: 15rpx;
}

.down-item-line1 {
  display: flex;
  height: 100rpx;
}

.down-item-line1-icon {
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.down-item-line1-text {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 25rpx;
  color: rgb(44, 44, 44);
  margin-left: 20rpx;
}

.down-item-line2 {
  display: flex;
  height: 100rpx;
  background: #f0f3fa;
}

.down-item-line2-input {
  border: 1rpx solid black;
  background: #f0f3fa;
  border-radius: 10rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 40rpx;
  padding-left:10rpx;
  width: 510rpx;
}

.down-item-line2-btn1, .down-item-line2-btn2 {
  width: 150rpx;
  height: 50rpx;
  font-size: 25rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 50rpx;
  margin-top: 25rpx;
  margin-left: 20rpx;
  color: rgb(49, 49, 49);
}

.down-item-line2-btn1 {
  background: linear-gradient(to right, rgb(150, 255, 150), rgb(70, 219, 1));
}

.down-item-line2-btn2 {
  background: linear-gradient(to right, #ffd18b, #ff9700);
}

.select1 {
  background: rgba(0, 0, 0, 0.1);
}

.select2 {
  background: linear-gradient(to right, rgb(232, 255, 232), rgb(162, 255, 118));
}

.select3 {
  background: linear-gradient(to right, #fff2df, #ffc266);
}
