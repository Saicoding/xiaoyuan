/* pages/userInfo/userInfo.wxss */

/* 最上面部分 */
.up {
  background: #2983fe;
  width: 100%;
  height: 360.5rpx;
  color: white;
  text-align: center;
  position: relative;
  align-items: center;
  z-index: 0;
}

.up-backimg1 {
  position: absolute;
  left: 24rpx;
  bottom: 0rpx;
  width: 702rpx;
  height: 114rpx;
  z-index: 10;
  opacity: 0.1;
}

.up-backimg2 {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 20rpx;
  z-index: 10000;
}

.pic-outcontainer {
  width: 152rpx;
  height: 152rpx;
  border-radius: 152rpx;
  background: white;
}

.pic {
  width: 145rpx;
  height: 145rpx;
  border-radius: 145rpx;
  border: 1rpx solid rgba(41, 131, 254, 0.3);
  margin-top: 1rpx;
}

.pic-icon {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  left: 50rpx;
  top: -50rpx;
}

.up-button,.info, .pic-outcontainer {
  float: left;
}

.info {
  margin-top: 60rpx;
}

.pic-outcontainer {
  margin-top: 40rpx;
  margin-left:40rpx;
}

.info, .info-text1, .info-text2 {
  width: 300rpx;
  text-align: left;
}

.up-button,.up-button-block{
  width:230rpx;
}

.up-button{
  margin-top:60rpx;
}
.up-button-block{
  display: flex;
  justify-content: center;
  border-radius: 10rpx;
}
.up-button-block,.up-button-block-text{
  height:50rpx;
  line-height: 50rpx;
}

.up-button-block-icon{
  width:40rpx;
  height:40rpx;
  margin-top:5rpx;
}

.up-button-block-text{
  color:white;
  font-size:25rpx;
  margin-left:10rpx;
}

.info-text1 {
  padding-left: 30rpx;
  color: white;
  font-size: 50rpx;
}

.info-text2 {
  padding-left: 30rpx;
  color: rgb(211, 211, 211);
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}

.up-mid {
  clear: both;
  display: flex;
  width: 710;
  margin: 0 auto;
  justify-content: space-around;
  margin-top: 50rpx;
}

.up-mid-item, .up-mid-item-num, .up-mid-item-text {
  width: 180rpx;
  color: white;
}

.up-mid-item {
  text-align: center;
  height: 100rpx;
}

.up-mid-item-text {
  font-size: 28rpx;
}

.up-mid-item-num {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 22rpx;
}
