/* pages/chat/chat.wxss */

.container {
}

/* 内容部分 */

.content {
  width: 100%;
  background: #ededed;
}

/* 对话框 */

.chat {
  width: 710rpx;
  margin: 0rpx auto;
}

.chat-block {
  display: flex;
  width: 100%;
  align-items: right;
}

.chat-headpic {
  width: 68rpx;
  height: 68rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.chat-content {
  font-size: 28rpx;
  background: white;
  padding: 15rpx 15rpx 15rpx 15rpx;
  border-radius: 10rpx;
  line-height: 45rpx;
  max-width:450rpx;
}

.chat-triangle {
  width: 0;
  height: 0;
  border-width: 12rpx 12rpx 12rpx 0;
  border-radius: 8rpx;
  margin-top: 25rpx;
  border-style: solid;
  border-color: transparent white transparent transparent; /*透明 灰 透明 透明 */
  margin-left: 20rpx;
  margin-right:-1rpx;
}

.chat-date{
  height:90rpx;
  line-height: 90rpx;
  font-size:22rpx;
  color:#aeaeae;
  width:100%;
  text-align: center;
}

.chehui{
  font-size:22rpx;
  text-align: center;
  height:100rpx;
  line-height: 100rpx;
  color:#a5a5a5;
}

/* 最下面部分 */

.bottom {
  position: fixed;
  display: flex;
  bottom: 0rpx;
  background: #e4e4e4;
  height: 100rpx;
  width: 100%;
}

.bottom-icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.bottom-input {
  background: white;
  width: 465rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
  height: 70rpx;
  margin-top: 15rpx;
  padding-left: 15rpx;
}

.bottom-send{
  color:white;
  font-size:25rpx;
  text-align: center;
  border-radius: 12rpx;
  height:60rpx;
  width:80rpx;
  margin-top:20rpx;
  background: #07c160;
  line-height: 60rpx;
  margin-left:10rpx;
}