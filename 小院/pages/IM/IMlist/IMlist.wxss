/* pages/IM/IMlist/IMlist.wxss */
.chat{
  width:100%;
  height:130rpx;
  display: flex;
}

.chat-pic{
  width:80rpx;
  height:80rpx;
  margin-top:25rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
}

.num{
  position: relative;
  width:35rpx;
  height:35rpx;
  border-radius: 35rpx;
  background: rgb(255, 102, 0);
  color:white;
  font-size:20rpx;
  text-align: center;
  line-height: 35rpx;
  left:90rpx;
  top:15rpx;
}

.chat-right{
  display: flex;
  height:130rpx;
  border-bottom: 1rpx solid #e9e8e8;
  width:630rpx;
  margin-left:25rpx;
}

.chat-mid,.chat-name,.chat-mid-content{
  width:400rpx;
}

.chat-mid{
  height:130rpx;
}

.chat-mid-name{
  font-size:28rpx;
  height:70rpx;
  line-height: 85rpx;
}

.chat-mid-content{
  font-size:22rpx;
  color:#b2b2b2;
  height:60rpx;
  line-height: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.chat-time{
  height:130rpx;
  line-height: 130rpx;
  width:160rpx;
  text-align: right;
  margin-right:30rpx;
  font-size:22rpx;
  color:#c4c4c4;
}

.loading-block {
  width: 100%;
  height: 80rpx;
  font-size: 23rpx;
  line-height: 80rpx;
  margin: 0rpx auto;
  text-align: center;
  margin-bottom: 15rpx;
  color: rgb(156, 156, 156);
}

.loading-gif {
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
}

.loading-text {
  display: inline-block;
  margin-left: 10rpx;
  vertical-align: middle;
}


.select1{
  background: rgb(235, 235, 235);
}