/* pages/IM/IMlist/IMlist.wxss */
.chat{
  width:100%;
  height:130rpx;
  display: flex;
}

.chat-pic{
  width:80rpx;
  height:80rpx;
  margin-top:25rpx;
  border-radius: 15rpx;
  margin-left:25rpx;
}

.chat-right{
  display: flex;
  height:130rpx;
  border-bottom: 1rpx solid #e9e8e8;
  width:680rpx;
  margin-left:25rpx;

}

.chat-mid,.chat-name,.chat-mid-content{
  width:440rpx;
}

.chat-mid{
  height:130rpx;
}

.chat-mid-name{
  font-size:28rpx;
  height:70rpx;
  line-height: 80rpx;
}

.chat-mid-content{
  font-size:22rpx;
  color:#b2b2b2;
  height:60rpx;
  line-height: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.chat-time{
  height:130rpx;
  line-height: 130rpx;
  width:160rpx;
  text-align: right;
  margin-right:30rpx;
  font-size:22rpx;
  color:#c4c4c4;
}

.select1{
  background: rgb(235, 235, 235);
}