/* 总框架 */

.mycontainer {
  width: 700rpx;
  margin: 0 auto;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 50rpx;
  margin-bottom:20rpx;
}

.block, .block-input {
  width: 100%;
}

.block {
  border-bottom: 1px solid #e6e6e6;
}

.block-input {
  height: 70rpx;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  font-size: 25rpx;
}

.code{
  display: flex;
  justify-content: space-between; 
}

.code-input{
  width:68%;
}

.identify-code{
  color: #fff;
  background: #388ff8;
  border:#c6c6c6;
  border-radius: 10rpx;
  width:32%;
  height:50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 25rpx;
  margin-top:30rpx;
}

/* 忘记密码和账号注册 */

.smallblock {
  clear: both;
  display: flex;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
}

.smallblock-forget, .smallblock-sign {
  font-size: 22rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.smallblock-forget {
  color: rgb(77, 77, 77);
}

.smallblock-sign {
  color: #2983fe;
}

/* 确定按钮 */
.submit {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 70rpx;
  margin: 70rpx auto;
  color: white;
  font-size: 28rpx;
  text-align: center;
  background: linear-gradient(to right,#7fb4ff,#1c7aff);
}

/* 快速登录的线 */
.line{
  display: flex;
  justify-content: center;
}

.line-border{
  width:180rpx;
  border-top:1rpx solid rgba(204, 204, 204,0.3);
  margin-top:15rpx;
}

.line-text{
  height:40rpx;
  color:rgb(187, 187, 187);
  font-size:22rpx;
}

/* 快捷登录的图标 */
.fastlogin{
  display: flex;
  justify-content: center;
  margin-top:40rpx;
}

.fastlogin-icon{
  width:65rpx;
  height:65rpx;
}

.select1{
  opacity: 0.3;
}

.select2{
  background: linear-gradient(to right,#aacdff,rgb(34, 124, 250));
}
