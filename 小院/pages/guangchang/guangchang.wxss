/* pages/guangchang/guangchang.wxss */

.banner {
  width: 750rpx;
  height: 440rpx;
}

/* 集市和旮旯 */

.jishi_gala {
  display: flex;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.jishi_gala-icon {
  width: 100rpx;
  height: 100rpx;
  margin-left: 30rpx;
}

.jishi-block {
  height: 100rpx;
  width: 180rpx;
  margin-left: 20rpx;
}

.jishi-block-line1 {
  font-size: 28rpx;
  line-height: 60rpx;
}

.jishi-block-line2 {
  font-size: 25rpx;
  color: rgb(168, 168, 168);
  line-height: 20rpx;
}

/* 中间的banner */

.midbanner {
  width: 100%;
  height: 209rpx;
}

/* 无好友不同学 */

.friend {
  background: #f5f5f5;
  margin-top: 10rpx;
  padding-bottom: 100rpx;
}

.friend-block {
  width: 710rpx;
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.friend-left {
  font-size: 28rpx;
  line-height: 90rpx;
}

.friend-right {
  line-height: 90rpx;
  font-size: 25rpx;
  color: #0096fa;
}

.friends {
  
}

.friend-item {
  display: flex;
  flex-direction: column;
  align-items:center;
  float: left;
  width: 240rpx;
  border-radius: 10rpx;
  background: white;
}

.friend-item-pic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-top:20rpx;
}

.friend-item-nickname {
  font-size: 28rpx;
  margin-top:20rpx;
}

.friend-item-school {
  font-size: 25rpx;
  color: rgb(158, 158, 158);
  margin-top:20rpx;
}

.firend-item-mark {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #0096fa;
  border: 1rpx solid #0096fa;
  border-radius: 10rpx;
  font-size:25rpx;
  text-align: center;
  margin-top:20rpx;
  margin-bottom:20rpx;
}

.select1{
  background: linear-gradient(to right,rgb(238, 238, 238),rgb(209, 209, 209));
}
