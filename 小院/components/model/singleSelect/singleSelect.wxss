/* components/errorRecovery/errorRecovery.wxss */

.container-in {
  width: 610rpx;
  position: fixed;
  top: 150rpx;
  left: 40rpx;
  background: white;
  z-index: 10000;
  border-radius: 8rpx;
  padding:20rpx 40rpx 30rpx 35rpx;
}

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  filter: Alpha(Opacity=60);
  background-color: #1f1f1f;
  opacity: 0.5;
  z-index: 9999;
}

.block{
  display: flex;
  height:70rpx;
  border-bottom:1rpx solid rgb(231, 231, 231);
  font-size:25rpx;
  line-height: 70rpx;
}

.icon{
  width:30rpx;
  height:30rpx;
  margin-top:20rpx;
}

.block-text{
  margin-left:30rpx;
}
