/* components/errorRecovery/errorRecovery.wxss */

.container-in {
  width: 670rpx;
  position: fixed;
  top: 150rpx;
  left: 40rpx;
  background: white;
  z-index: 10000;
  border-radius: 8rpx;
  padding-bottom: 15rpx;
}

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  filter: Alpha(Opacity=60);
  background-color: #1f1f1f;
  opacity: 0.5;
  z-index: 9999;
}

.title{
  height:60rpx;
  line-height: 80rpx;
  font-weight: bold;
  font-size:28rpx;
  margin-left:20rpx;
}

.input{
  font-size:28rpx;
  height:50rpx;
  line-height: 50rpx;
  padding-left:20rpx;
  margin-top:20rpx;
}

.bottom{
  display: flex;
  font-size:25rpx;
  margin-top:50rpx;
}

.bottom-btn{
  font-size:25rpx;
  color:#0096fa;
  width:200rpx;
  text-align: center;
  height:60rpx;
  line-height: 60rpx;
}

