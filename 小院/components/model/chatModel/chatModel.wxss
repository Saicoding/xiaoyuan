/* components/errorRecovery/errorRecovery.wxss */

.container-in {
  display: flex;
  width: 350rpx;
  position: absolute;
  background: white;
  top: 50rpx;
  left: 20rpx;
  z-index: 10000;
  border-radius: 8rpx;
  padding-bottom: 15rpx;
  background: black;
  padding: 0 20rpx 0 20rpx;
  justify-content: space-around;
}

.item-block {
  width: 50rpx;
}

.item-block-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
  flex-shrink: 0;
}

.item-block-text {
  font-size: 20rpx;
  width: 50rpx;
  height: 35rpx;
  line-height: 28rpx;
  text-align: center;
  color: #dbdbdb;
}

.triangel {
  width: 0;
  height: 0;
  border-width: 10px 10px 0;
  border-style: solid;
  border-color: black transparent transparent; /*灰 透明 透明 */
  position: absolute;
  top: 82rpx;
}

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
  filter: Alpha(Opacity=60);
  background-color: white;
  opacity: 0;
  z-index: 9999;
}
